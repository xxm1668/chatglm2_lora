{
  "train_micro_batch_size_per_gpu": 2,
  "gradient_accumulation_steps": 2,
  "controller_port": 12345,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 5e-5,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 0.0
    }
  },
  "fp16": {
    "enabled": true,
    "bf16": true
  },
  "zero_optimization": {
    "stage": 1,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "allgather_partitions": true,
    "allgather_bucket_size": 2e8,
    "overlap_comm": true,
    "reduce_scatter": true,
    "reduce_bucket_size": 2e8,
    "contiguous_gradients": true
  },
  "steps_per_print": 50
}